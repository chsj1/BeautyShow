                <TextView
                    style="@style/more_item_textview"
                    android:text="@string/more_item_fankui" />

                <ImageView style="@style/more_item_submenu_imv" />
            </RelativeLayout>

            <View
                style="@style/list_item_border_hor"
                android:layout_marginLeft="30dp" />

            <RelativeLayout
                android:id="@+id/more_item_update"
                style="@style/more_item_layout">

                <ImageView
                    style="@style/more_item_imageview"
                    android:src="@drawable/icon_more_update" />

                <TextView
                    style="@style/more_item_textview"
                    android:text="@string/more_item_update" />

                <ImageView style="@style/more_item_submenu_imv" />
            </RelativeLayout>

            <View
                style="@style/list_item_border_hor"
                android:layout_marginLeft="30dp" />

            <RelativeLayout
                android:id="@+id/more_item_we"
                style="@style/more_item_layout">

                <ImageView
                    style="@style/more_item_imageview"
                    android:src="@drawable/icon_more_we" />

                <TextView
                    style="@style/more_item_textview"
                    android:text="@string/more_item_we" />

                <ImageView style="@style/more_item_submenu_imv" />
            </RelativeLayout>

            <View
                style="@style/list_item_border_hor"
                android:layout_marginLeft="30dp" />

            <RelativeLayout
                android:id="@+id/more_item_share"
                style="@style/more_item_layout">

                <ImageView
                    style="@style/more_item_imageview"
                    android:src="@drawable/icon_more_share" />

                <TextView
                    style="@style/more_item_textview"
                    android:text="@string/more_item_share" />

                <ImageView style="@style/more_item_submenu_imv" />
            </RelativeLayout>

            <View style="@style/list_item_border_hor" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>